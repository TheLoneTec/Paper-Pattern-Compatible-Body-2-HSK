<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Makes heads smaller for aesthetic reasons. -->

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Dubs Apparel Tweaks</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs</xpath>
				<value>
					<FacialAnimation.FaceAdjustmentDef ParentName="HU_FAFaceSizeAndPosition">
						<defName>RatkinSizeAndPositionDef</defName>
						<RaceName>Ratkin</RaceName>
						<Size>(1.5,1.5)</Size>
					</FacialAnimation.FaceAdjustmentDef>
				</value>
			</li>
			
			<li Class="PatchOperationConditional">
				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator/customHeadDrawSize</xpath>
				<nomatch Class="PatchOperationAdd">
				  <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator</xpath>
				  <value>
					<customHeadDrawSize>(1.0, 1.0)</customHeadDrawSize>
				  </value>
				</nomatch>
				<match Class="PatchOperationReplace">
				  <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator/customHeadDrawSize</xpath>
				  <value>
					<customHeadDrawSize>(1.0, 1.0)</customHeadDrawSize>
				  </value>
				</match>
			</li>
			
			<li Class="PatchOperationConditional">
				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator/customPortraitHeadDrawSize</xpath>
				<nomatch Class="PatchOperationAdd">
				  <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator</xpath>
				  <value>
					<customPortraitHeadDrawSize>(1.0, 1.0)</customPortraitHeadDrawSize>
				  </value>
				</nomatch>
				<match Class="PatchOperationReplace">
				  <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator/customPortraitHeadDrawSize</xpath>
				  <value>
					<customPortraitHeadDrawSize>(1.0, 1.0)</customPortraitHeadDrawSize>
				  </value>
				</match>
			</li>
			
			<li Class="PatchOperationConditional">
				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator/headOffset</xpath>
				<nomatch Class="PatchOperationAdd">
				  <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator</xpath>
				  <value>
					<headOffset>(0.00,0.00)</headOffset>
				  </value>
				</nomatch>
				<match Class="PatchOperationReplace">
				  <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator/headOffset</xpath>
				  <value>
					<headOffset>(0.00,0.00)</headOffset>
				  </value>
				</match>
			</li>

			
			</operations>
		</match>
		<nomatch Class="PatchOperationSequence">
		<operations>
		
			<li Class="PatchOperationAdd">
				<xpath>Defs</xpath>
				<value>
					<FacialAnimation.FaceAdjustmentDef ParentName="HU_FAFaceSizeAndPosition">
						<defName>RatkinSizeAndPositionDef</defName>
						<RaceName>Ratkin</RaceName>
					</FacialAnimation.FaceAdjustmentDef>
				</value>
			</li>
			
			<li Class="PatchOperationConditional">
				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator/customHeadDrawSize</xpath>
				<nomatch Class="PatchOperationAdd">
				  <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator</xpath>
				  <value>
					<customHeadDrawSize>(0.783, 0.783)</customHeadDrawSize>
				  </value>
				</nomatch>
				<match Class="PatchOperationReplace">
				  <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator/customHeadDrawSize</xpath>
				  <value>
					<customHeadDrawSize>(0.783, 0.783)</customHeadDrawSize>
				  </value>
				</match>
			</li>
			
			<li Class="PatchOperationConditional">
				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator/customPortraitHeadDrawSize</xpath>
				<nomatch Class="PatchOperationAdd">
				  <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator</xpath>
				  <value>
					<customPortraitHeadDrawSize>(0.783, 0.783)</customPortraitHeadDrawSize>
				  </value>
				</nomatch>
				<match Class="PatchOperationReplace">
				  <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator/customPortraitHeadDrawSize</xpath>
				  <value>
					<customPortraitHeadDrawSize>(0.783, 0.783)</customPortraitHeadDrawSize>
				  </value>
				</match>
			</li>
			
			<li Class="PatchOperationConditional">
				<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator/headOffset</xpath>
				<nomatch Class="PatchOperationAdd">
				  <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator</xpath>
				  <value>
					<headOffset>(0.00,-0.055)</headOffset>
				  </value>
				</nomatch>
				<match Class="PatchOperationReplace">
				  <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator/headOffset</xpath>
				  <value>
					<headOffset>(0.00,-0.055)</headOffset>
				  </value>
				</match>
			</li>
			
		</operations>
		</nomatch>
	</Operation>
	
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator/headOffsetDirectional</xpath>
		<nomatch Class="PatchOperationAdd">
		  <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator</xpath>
		  <value>
			<headOffsetDirectional>
				<east>(-0.025, 0.00)</east>
				<west>(0.025, 0.00)</west>
			</headOffsetDirectional>
		  </value>
		</nomatch>
		<match Class="PatchOperationReplace">
		  <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Ratkin"]/alienRace/generalSettings/alienPartGenerator/headOffsetDirectional</xpath>
		  <value>
			<headOffsetDirectional>
				<east>(-0.025, 0.00)</east>
				<west>(0.025, 0.00)</west>
			</headOffsetDirectional>
		  </value>
		</match>
	</Operation>
	
</Patch>